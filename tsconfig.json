{
  "compilerOptions": {
    "strict": false,
    // "baseUrl": "./",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./target",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "extendedDiagnostics": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "target": "es2015",
    "types": ["reflect-metadata", "node", "jest", "@pyoner/svelte-types"],
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true
  },
  "include": [
    "./src/*",
    "./src/**/*"
  ],
  "exclude": [
    "./src/scripts",
    "./src/test/**/*"
  ]
}